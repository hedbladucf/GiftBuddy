<!DOCTYPE html>

<div class="jumbotron">
  <div class="container text-center">
    <h1>{{groupName}}</h1>
    <p>Testing</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
        <h2 class="text-center">MEMBERS</h2>
        <ul class="list-unstyled">
        {{#each groupUsers}}
        <li class="text-center">{{this.full_name}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="col-lg-5">
        <h2 class="text-center">DISQUS</h2>
        <!-- DISQUS WIDGET -->


        <!-- Your buddy info! -->
        <p>Didn't know where else to put this oscar you can just copy/paste!<p>

        <h2>This is your Gift Buddy(Tm)!</h2>
        {{#each yourBuddy}}
            <p>
                {{this.full_name}}  <br>
                {{this.address}}    <br>
                {{this.email}}      <br>
                {{this.wishes}}     <br>
            </p>
        {{/each}}

    </div>
    <div class="col-lg-4">
        <h2 class="text-center">GIFTS</h2>
        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th><strong>Sent</strong></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Item_Sent</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th><strong>Recieved</strong></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Item_Recieved</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>

<footer class="container-fluid text-center" style="bottom: 0;">
  <form class="form-inline" style="font-size: 15pt;">Copyright GiftBuddy</form>
</footer>
